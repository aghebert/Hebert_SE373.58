<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>


<form action="/sendupdate">
    First Name: <br />
    <input id="firstName" type="text" name="firstName" value={{firstName}}><br/>
    <br/>
    Last Name: <br/>
    <input id="lastName" type="text" name="lastName" value={{lastName}}><br/>
    <br/>
    Department: <br/>
    <input id="department" type="text" name="department" value={{department}}><br/>
    <br/>
    Start Date <br/>
    <input id="startDate" type="date" name="startDate" value={{startDate}}><br/>
    <br/>
    Job Title: <br/>
    <input id="jobTitle" type="text" name="jobTitle" value={{jobTitle}}><br/>
    <br/>
    Salary: <br/>
    <input id="salary" type="number" min="0.01" step="0.01" name="salary"  value={{salary}}>
    <br/>
    <br/>
    <input type="hidden" name="id" value={{id}}>
    <input type="submit" value="Submit">
</form>

